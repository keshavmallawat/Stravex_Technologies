rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to all documents for public pages
    match /{document=**} {
      allow read: if true;
    }
    
    // Contact submissions - allow create for public, read/write for admins only
    match /contacts/{contactId} {
      allow create: if true; // Public can submit contact forms
      allow read, write, delete: if isAdmin();
    }
    
    // Blog posts - allow read for public, write for admins only
    match /blogs/{blogId} {
      allow read: if true; // Public can read blogs
      allow create, update, delete: if isAdmin();
    }
    
    // Career postings - allow read for public, write for admins only
    match /careers/{careerId} {
      allow read: if true; // Public can read job postings
      allow create, update, delete: if isAdmin();
    }
    
    // Admin users collection - only admins can read/write
    match /admin_users/{userId} {
      allow read, write: if isAdmin();
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             request.auth.token.email in [
               'boss1@company.com',
               'boss2@company.com'
             ];
    }
  }
}


